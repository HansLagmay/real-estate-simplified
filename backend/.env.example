# Real Estate Simplified - Environment Configuration
# Copy this file to .env and update values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=real_estate_simplified

# JWT Secret (change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Origin (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:8080,http://localhost:5500

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@realestate.com

# reCAPTCHA v3 (get keys from https://www.google.com/recaptcha/)
RECAPTCHA_SITE_KEY=your-site-key
RECAPTCHA_SECRET_KEY=your-secret-key
